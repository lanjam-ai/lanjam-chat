# Database — Postgres with pgvector
DATABASE_URL=postgresql://lanjam:lanjam@localhost:5432/lanjam

# MinIO — Object storage for file uploads
MINIO_ENDPOINT=localhost
MINIO_PORT=9100
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=family-chat
MINIO_USE_SSL=false

# Ollama — Local LLM runtime
OLLAMA_HOST=http://localhost:11434

# Whisper — Voice transcription (speech-to-text)
WHISPER_HOST=http://localhost:8000

# Session — Auth cookie settings
SESSION_SECRET=change-me-to-a-random-string-at-least-32-chars
SESSION_DAYS=180

# File uploads
MAX_UPLOAD_MB=25
ALLOWED_FILE_TYPES=txt,md,pdf,docx

# Embeddings — Model used for vector embeddings via Ollama
ACTIVE_EMBEDDING_MODEL=nomic-embed-text
